<form method="post" action="{{ path('proposition_delete', {'slug': proposition.slug}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ proposition.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
